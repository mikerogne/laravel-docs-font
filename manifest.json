{
    "name": "Laravel Docs Font",
    "version": "1.0",
    "description": "Changes the font of Laravel Docs to something more readable.",
    "permissions": [
        "declarativeContent",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://laravel.com/docs/*"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "manifest_version": 2
}